<?xml version="1.0" encoding="UTF-8"?>  

<widget xmlns = "http://www.w3.org/ns/widgets"
xmlns:gap = "http://phonegap.com/ns/1.0"
id = "com.phonegap.app6"
version = "1.0.0">
 
 <name> app6 BATALLA DE PUEBLA </name>
 
 <description>
 Aplicaion de la balla de Puebla
 </description>
 
 <author href="https://build.poneghap.com" email = "wendybm698@gmail.com">
 	Wendolyn Pedraza Catarino
	</author>
	
	<!--Personaliza la aplicaion y plataforma -->
	<perference name="orientation"  value="default"/>
	<!-- <perference name ="orientation" value="portrait"/>
	<preference name="orientation" value="landscape"/> -->
	<perference name="target-device"  value="universal"/>
	<perference name="fullscreen"  value="true"/>
	<perference name="android-installLocation"  value="auto"/>	
	<perference name="permissions"  value="INTERNET"/>
	
	<!--Para accesar la pagina de internet-->
	 <allow-internet href="https://*/*"/>
	 <acces origin="https://*/*"/>
	 <allow-internet href="http://*/*"/>
	 <acces origin="http://*/*"/>
	 <plugin name="cordova-plugin-whitelist" source="npm"/>
	
	<!-- Plugins -->
	<!--Core plugins-->
	<plugin name="cordova-plugin-device" spec="~1.1.4"/>
	<plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
	<plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
	
	<!--<plugin name="cordova-plugin-geolocation" source="npm"/>-->
	<!-- Third part plugins -->
	
	<!-- Colocar icono app -->
	
	<icon src="res/android/mdpi.png"/>
	
	</widget>
	